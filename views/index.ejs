  </style>

  <div id="chatbot-btn">
    ðŸ’¬
  </div>

  <div id="chatbot-container">
    <div id="chatbot-header">
      Destek Botu
      <span id="chatbot-close">X</span>
    </div>
    <div id="chatbox">
      <!-- Botun yanÄ±tlarÄ± buraya gelecek -->
    </div>
    <input type="text" id="chatbot-input" placeholder="MesajÄ±nÄ±zÄ± yazÄ±n..." />
  </div>

  <script>
    // Destek Botu aÃ§ma ve kapatma iÅŸlemleri
    const chatbotBtn = document.getElementById('chatbot-btn');
    const chatbotContainer = document.getElementById('chatbot-container');
    const chatbotClose = document.getElementById('chatbot-close');

    chatbotBtn.addEventListener('click', () => {
      chatbotContainer.style.display = 'block';
    });

    chatbotClose.addEventListener('click', () => {
      chatbotContainer.style.display = 'none';
    });

    // Bot ile etkileÅŸim iÃ§in mesaj gÃ¶nderme
    const chatbotInput = document.getElementById('chatbot-input');
    const chatbox = document.getElementById('chatbox');

    chatbotInput.addEventListener('keypress', async (event) => {
      if (event.key === 'Enter') {
        const userInput = chatbotInput.value;
        chatbox.innerHTML += `<p><strong>Sen:</strong> ${userInput}</p>`;

        // API'ye istek gÃ¶nder
        const response = await fetch('/ask-bot', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ message: userInput }),
        });

        const data = await response.json();
        chatbox.innerHTML += `<p><strong>Bot:</strong> ${data.response}</p>`;
        chatbotInput.value = '';
        chatbox.scrollTop = chatbox.scrollHeight;
      }
    });
  </script>

